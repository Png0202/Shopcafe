<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Thông tin cơ bản về ứng dụng -->
    <display-name>Cafe Web Shop</display-name>
    <description>
        Website quản lý quán cà phê sử dụng JSP/Servlet theo mô hình MVC
    </description>

    <!-- Cấu hình trang chào mừng (welcome file) -->
    <!-- Khi truy cập root URL, Tomcat sẽ tự động load index.jsp -->
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <!-- Cấu hình session timeout (30 phút) -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>